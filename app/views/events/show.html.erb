<div class="audrey-container">
  <div class="event-banner">
    <%= image_tag "logo_spotter.png" %>
    <h1 class="text-center"><%= @event.activity.name %> session </h1>
  </div>
  <div class="event-information">
    <div class="event-information-left">
      <div class="left-block">
        <%= image_tag "icon-date.jpg" %>
      </div>
      <div class="right-block">
        <div class="top-block">
          <p><%= @start_at %></p>
        </div>
        <div class="bottom-block">
          <p><%= @end_at %></p>
        </div>
      </div>
    </div>
    <div class="event-information-middle">
      <div class="left-block">
        <%= image_tag "icon-place.jpg" %>
      </div>
      <div class="right-block">
        <div class="top-block">
          <p>Address</p>
        </div>
        <div class="bottom-block">
          <p><%= @event.address %></p>
        </div>
      </div>
    </div>
    <div class="event-information-right">
      <div class="top-block-center">
        <% if @event.participants.count > 0 %>
          <p class="text-center"><%= @event.participants.count %> Participants 💪🏼</p>
        <% else %>
          <p>No participants yet ⛄️</p>
        <% end %>
      </div>
      <div class="bottom-block-center">
        <% @event.participants.first(5).each do |participant| %>
          <div class="event-participant-picture">
            <%= link_to do %>
              <%= image_tag participant.facebook_picture_url, {class: "avatar owner-picture"} %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
    <div class="event-owner">
      <div class="event-owner-picture">
        <%= image_tag @event.user.facebook_picture_url, {class: "avatar-large"}%>
      </div>
      <div class="event-owner-content">
        <p class="text-center">Organised by
        <%= link_to do %>
          <strong><%= @event.user.first_name %></strong>
        <% end %>
        </p>
        <p class="text-center">"<%= @event.description %>"</p>
      </div>
    </div>
  </div>

    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-offset-8 col-sm-4">
        <div class="event-description-cancel margin-20">
          <%= link_to do %>
            <p>Cancel my participation</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
